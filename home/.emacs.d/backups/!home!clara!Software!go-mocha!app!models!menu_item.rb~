class MenuItem < ActiveRecord::Base
  attr_accessible :name, :price, :business_id, :description, :clipart, :prep_time_in_secs
  validates_presence_of :name, :price_cents
  belongs_to :business
  has_many :add_ons
  monetize :price_cents
  has_attached_file :clipart, styles: { medium: '300x300>', thumb: '100x100>' },   :default_url => "/assets/item.png"
  validates_attachment_content_type :clipart, content_type: %w(image/jpeg image/jpg image/png)
end
