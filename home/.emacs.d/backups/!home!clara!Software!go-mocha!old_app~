<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% if current_business %>
        <%= current_business.email %>
      <% end %>
      <ul class='menu'>
        <% if user_signed_in? %>
          <li>
            <a href="/menu_items">Menu</a>
          </li>
          <li>
            <a href="/cart">Cart</a>
          </li>
          <li>
            <%= link_to('Logout', destroy_user_session_path, :method            => :delete) %>          </li>
          <% elsif admin_user_signed_in? %>
            <li><a href="/admin">Admin</a></li>
          <li>
            <%= link_to('Logout', destroy_admin_user_session_path,            :method            => :delete) %>          
          </li>
          <% elsif business_signed_in? %>
            <li><a href="/admin">Admin</a></li>
          <li>
            <%= link_to('Logout', destroy_business_session_path,            :method            => :delete) %>          
          </li>

        <% else %>
          <li>
            <%= link_to('User Login', new_user_session_path)  %>  
          </li>
          <li>
            <%= link_to('Business Login', new_business_session_path)  %>  
          </li>
          <li>
            <%= link_to('Admin Login', new_admin_user_session_path)  %>  
          </li>
        <% end %>
      </ul>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
