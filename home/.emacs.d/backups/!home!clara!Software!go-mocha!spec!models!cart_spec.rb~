require 'spec_helper'
describe Cart do
    it "has no items if it has no businesses" do
    o = Order.new
    c.businesses.should be_empty
    c.items.should be_empty
  end
  it "collects the items of its businesses" do
    o = Order.new
    c.add_item(FactoryGirl.create(:menu_item))
    c.num_items.should be 1
    c.items.should_not be_empty
  end

end
