    <!-- Timelinz -->
    <script src="MainFiles/scripts/timelinz.min.js"></script>

    <!-- Create Timelinz -->
    <script>
    // Get the container element
    var container = $('#main')[0];

    var lineAnimationDelay = 0;
    var pointAnimationDelay = 0;

    // Define the options
    var options = {
        onLineRender: function (lineElem, lineData)
        {
            var $elem = $(lineElem);

            // add animate.css classes
            $elem.addClass('animated bounceInUp');

            // set animation delay
            $elem.css({animationDelay: lineAnimationDelay + 's'});

            // calc next animation delay
            lineAnimationDelay += 0.2;
        },

        onLineRendered: function (lineElem, lineData, filledLineList)
        {
            // animate filled lines
            $(filledLineList).each(function () {
                $(this)
                    // add animate.css classes
                    .addClass('animated fadeIn')

                    // set animation delay
                    .css({animationDelay: lineAnimationDelay + 0.6 + 's'});
            });
        },

        onPointRendered: function (pointElem, pointData)
        {
            var $elem = $(pointElem);

            // set animation delay
            $elem.css({animationDelay: pointAnimationDelay + 's'});

            // calc next animation delay
            pointAnimationDelay += 0.08;

            // add animate.css classes
            if (pointData.img) {
                $elem.addClass('animated bounceInUp');
            } else {
                $elem.addClass('animated fadeInUpBig');
            }
        }
    };

    // Define the data
    var data = [
        {
            name: 'The Moral Hazards',
            points: [
                {
                    filled: true,
    img: 'http://f0.bcbits.com/img/a0336687060_2.jpg',
    link: 'http://themoralhazards.bandcamp.com/album/jobless-recovery',
    time: '2013-03-28T20:12:14.000Z',
    desc: 'Jobless Recovery'
                },
                {
                    filled: false,
    img: 'http://f1.bcbits.com/img/a3956716026_2.jpg',
        link: 'http://themoralhazards.bandcamp.com/album/too-big-to-fail',
    time: '2011-01-01T21:12:14.000Z',
    desc: 'Too Big to Fail'
    
                },

            ]
        },
        {
            name: 'Timeline 2',
            points: [
                {
                    filled: true,
                    time: '2011-01-28T21:12:14.000Z'
                },
                {
                    filled: true,
                    time: '2015-06-29T21:15:12.000Z'
                },
                {
                    filled: true,
                    img: 'http://ifdb.tads.org/viewgame?coverart&id=3d4jyitc5a5l5i3m&thumbnail=250x250',
                    link: 'http://example.com',
                    time: '2011-10-19T21:15:12.000Z'
                }
            ]
        },
        {
            name: 'The Moomers Journal',
            points: [
    {
    img: 'http://journal.moomers.org/1.jpg',
                    filled: true,
    time: '2012-02-28T21:12:14.000Z',
    desc: "Issue 1: YEAR OF FEAR"
                },
    {
        img: 'http://journal.moomers.org/2.jpg',
                    filled: true,
    time: '2012-06-29T21:15:12.000Z',
    desc: "Issue 2: HOME"
                },
    {
        img: 'http://journal.moomers.org/3.jpg',
                    filled: true,
    time: '2012-12-29T21:15:12.000Z',
    desc: "Issue 3: SURVIVING"
    },
        {
        img: 'http://journal.moomers.org/4.jpg',
                    filled: true,
    time: '2013-04-29T21:15:12.000Z',
    desc: "Issue 4: ORDER"
                },
    {
        img: 'http://journal.moomers.org/5.jpg',
                    filled: true,
    time: '2013-12-29T21:15:12.000Z',
    desc: "Issue 5: COMPLEXITY"
                },


            ]
        }
    ];


    var selectPoint = function (pointData, timelineData) {
    // Set point title
    var $pointTitleElem = $('#point-title');
    var title = '';
    if (pointData.title) {
      title += pointData.title + ' at ';
    }
    //title += dateFormat(new Date(pointData.time)) + ' - ' + timelineData.name;
    $pointTitleElem.text(title);

    // Set point description
    $('#point-desc').text(pointData.desc);

    // Set speakers
    var $speakersTitleElem = $('#speakers-title');
    var $speakersElem = $('#speakers');
    $speakersElem.empty();
    if (pointData.speaker) {
      $speakersTitleElem.removeClass('hidden');

      var template = speakerTmpl.replace('{img}', pointData.speaker.img)
        .replace('{name}', pointData.speaker.name)
        .replace('{job}', pointData.speaker.job);
      $speakersElem.append(template);
    } else {
      $speakersTitleElem.addClass('hidden');
    }
  };

    // Create new Timelinz
    var timelinz = new Timelinz(data, {
        intervalUnit: 'year',
    reverseOrder: true,
    marginBetweenLines: 30,
      onLineRendered: function (lineElem, lineData) {
      // Add timeline title
      var template = '<h4 class="timelinz__line-title">{name}</h4>'.replace('{name}', lineData.name);
      $(lineElem).prepend(template);
    },
        onPointRendered: function (pointElem, pointData, timelineData) {
      var $pointElem = $(pointElem);
      // Set tooltip
      var tooltip = pointData.desc;
      if (pointData.title) {
        tooltip += ' - ' + pointData.title;
      } else {
        tooltip += pointData.speaker ? ' - ' + pointData.speaker.name : '';
      }
      $pointElem.addClass('tooltip-left')
        .attr('data-tooltip', tooltip);

      // Append <span> to normal points
      if (!pointData.img) {
        $pointElem.append(document.createElement('span'));
      }
        },
        onPointClicked: function (e, pointData, timelineData) {
      e.preventDefault();
      selectPoint(pointData, timelineData);
        }
        }
    );

    // Render Timelinz element
    timelinz.render(container);
    </script>



