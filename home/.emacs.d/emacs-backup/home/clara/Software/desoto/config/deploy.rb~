ENV['rvm_path']||="~/.rvm"
set :stages, %w(production staging)

set :default_stage, "staging"

require 'capistrano/ext/multistage'

set :repository,  "git@github.com:Parallactic/fotc"

set :scm, :git
# Or: `accurev`, `bzr`, `cvs`, `darcs`, `git`, `mercurial`, `perforce`, `subversion` or `none`

set :use_sudo, false
set :application, 'fotc'


ssh_options[:forward_agent] = true
default_run_options[:pty] = true

require 'bundler/capistrano'
require "whenever/capistrano"

# if you want to clean up old releases on each deploy uncomment this:
 after "deploy:restart", "deploy:cleanup"

# if you're still using the script/reaper helper you will need
# these http://github.com/rails/irs_process_scripts

# If you are using Passenger mod_rails uncomment this:
 namespace :deploy do
   task :start do ; end
   task :stop do ; end
   task :restart, :roles => :app, :except => { :no_release => true } do
     run "#{try_sudo} touch #{File.join(current_path,'tmp','restart.txt')}"
   end
 end

namespace :deploy do
  

  after 'deploy:update_code', 'deploy:migrate'
  after 'deploy', "bundle:install"


  
  after "deploy:setup", "deploy:pictures:setup"
  after "deploy:create_symlink", "deploy:pictures:symlink"


  namespace :pictures do
    desc "Create the pictures dir in shared path."
    task :setup do
      run "cd #{shared_path}; mkdir system"
    end

    desc "Link pictures from shared to common."
    task :symlink do
      run "cd #{current_path}/public; rm -rf system; ln -s #{shared_path}/system ."
    end

  end

  namespace :deploy do
    namespace :assets do
      task :precompile, :roles => :web, :except => { :no_release => true } do
        run "cd #{current_path} && #{rake} RAILS_ENV=#{rails_env} RAILS_GROUPS=assets assets:precompile --trace"
      end
    end
  end
  
end

