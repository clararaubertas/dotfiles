<% if @cart.businesses.empty? %>
<h4>Your Cart Is Empty</h4>
<% else %>
<%= form_tag :action => 'checkout', :controller => 'menu_items' %>
<% for b in @cart.businesses %>
  <% for order_item in b[:items].map{|i| OrderItem.new(:menu_item_id => i[:id], :quantity => i[:quantity], :notes => i[:notes],  :add_on_ids => i[:add_on_ids])} %>
               <div class="cartItem">
                  <b>(<%= order_item.quantity %>) <%= order_item.name %></b>
                  <i class="fa fa-minus-circle fa-1x "></i>
                  <i class="fa fa-pencil fa-1x "></i>
                  <span class="cartPrice"><%= number_to_currency order_item.price %></span>
                  <ul>
                    <% for ao in order_item.add_ons %>
                      <li><%= ao.description %></li>
                    <% end %>
                  </ul>
               </div>

        <%= link_to 'Remove', {:action => "remove_from_cart",
  :controller => 'menu_items', :id =>        order_item.menu_item_id}, :class => 'btn' %>
  <% end %>
<% end %>

               <span class="totals">Total: $6.50</span>
               </div>
               <a href="checkout.html" class="checkoutButton">Checkout<i class="fa fa-check  fa-1x white iconMargin"></i></a>
<% end %>
